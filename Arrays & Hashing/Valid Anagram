class Solution {
    public boolean isAnagram(String s, String t) {
        //edge case
        if(s.length() != t.length())
            return false;

        int[] charS = new int[26];  //constant space

        // O(n)
        for(char ch : s.toCharArray()){
            charS[ch - 'a']++;
        }

        // O(n)
        for(char ch : t.toCharArray()){
            charS[ch - 'a']--;
        }

        for(int idx : charS){
            if(idx != 0)
                return false;
        }
        return true;

    }
}